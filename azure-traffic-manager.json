{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "profileName": {
      "type": "string",
      "defaultValue": "voting-app-tm",
      "metadata": {
        "description": "Name for the Traffic Manager profile"
      }
    },
    "azureEndpoint": {
      "type": "string",
      "defaultValue": "52.154.54.110",
      "metadata": {
        "description": "Azure AKS endpoint"
      }
    },
    "onpremEndpoint": {
      "type": "string",
      "defaultValue": "66.242.207.21",
      "metadata": {
        "description": "On-premises endpoint"
      }
    },
    "onpremPort": {
      "type": "int",
      "defaultValue": 31514,
      "metadata": {
        "description": "On-premises port"
      }
    }
  },
  "variables": {
    "profileNameUnique": "[concat(parameters('profileName'), '-', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/trafficManagerProfiles",
      "apiVersion": "2022-04-01",
      "name": "[variables('profileNameUnique')]",
      "location": "global",
      "properties": {
        "profileStatus": "Enabled",
        "trafficRoutingMethod": "Priority",
        "dnsConfig": {
          "relativeName": "[variables('profileNameUnique')]",
          "ttl": 30
        },
        "monitorConfig": {
          "protocol": "HTTP",
          "port": 80,
          "path": "/",
          "intervalInSeconds": 30,
          "toleratedNumberOfFailures": 3,
          "timeoutInSeconds": 10
        }
      }
    },
    {
      "type": "Microsoft.Network/trafficManagerProfiles/externalEndpoints",
      "apiVersion": "2022-04-01",
      "name": "[concat(variables('profileNameUnique'), '/azure-aks-primary')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/trafficManagerProfiles', variables('profileNameUnique'))]"
      ],
      "properties": {
        "target": "[parameters('azureEndpoint')]",
        "endpointStatus": "Enabled",
        "priority": 1,
        "weight": 100
      }
    },
    {
      "type": "Microsoft.Network/trafficManagerProfiles/externalEndpoints", 
      "apiVersion": "2022-04-01",
      "name": "[concat(variables('profileNameUnique'), '/onprem-backup')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/trafficManagerProfiles', variables('profileNameUnique'))]"
      ],
      "properties": {
        "target": "[parameters('onpremEndpoint')]",
        "endpointStatus": "Enabled", 
        "priority": 2,
        "weight": 100
      }
    }
  ],
  "outputs": {
    "trafficManagerFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Network/trafficManagerProfiles', variables('profileNameUnique'))).dnsConfig.fqdn]"
    },
    "trafficManagerUrl": {
      "type": "string",
      "value": "[concat('http://', reference(resourceId('Microsoft.Network/trafficManagerProfiles', variables('profileNameUnique'))).dnsConfig.fqdn)]"
    },
    "azureEndpoint": {
      "type": "string", 
      "value": "[concat('Primary: ', parameters('azureEndpoint'), ' (Priority 1)')]"
    },
    "onpremEndpoint": {
      "type": "string",
      "value": "[concat('Backup: ', parameters('onpremEndpoint'), ':', parameters('onpremPort'), ' (Priority 2)')]"
    }
  }
}