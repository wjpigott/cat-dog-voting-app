# Cat vs Dog Voting App - Customer Configuration
# Update these values for your specific environment

# On-Premises Configuration
# Replace with your actual on-premises Kubernetes cluster IP and port
ONPREM_ENDPOINT="http://66.242.207.21:31514"
ONPREM_PUBLIC_IP="66.242.207.21"
ONPREM_SERVICE_PORT="31514"

# Azure PostgreSQL Configuration  
# Replace with your Azure PostgreSQL server details
AZURE_POSTGRES_HOST="postgres-cat-dog-voting.postgres.database.azure.com"
AZURE_POSTGRES_USER="votinguser"
AZURE_POSTGRES_PASSWORD="SecureVotingPassword123!"
AZURE_POSTGRES_DB="postgres"

# Azure AKS Configuration
# Will be automatically assigned by Azure, but you can check/update these
AZURE_LOAD_BALANCER_IP="52.154.54.110"
AZURE_CLUSTER_NAME="aks-cat-dog-voting"
AZURE_RESOURCE_GROUP="rg-cat-dog-voting"

# Load Balanced Endpoint (with failover)
LOAD_BALANCED_ENDPOINT="http://172.168.251.177"
ENABLE_FAILOVER="true"

# Load Testing Configuration
LOAD_TEST_TARGET_AZURE="http://${AZURE_LOAD_BALANCER_IP}"
LOAD_TEST_TARGET_ONPREM="http://${ONPREM_PUBLIC_IP}:${ONPREM_SERVICE_PORT}"

# Monitoring Configuration
MONITORING_ENABLED="true"
LOG_LEVEL="INFO"

